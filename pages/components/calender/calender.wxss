/* pages/components/calender.wxss */
.calender{
   display: flex;
   flex-direction: column;
   padding:0 4.5%;
   width:91%;
   border-top:1rpx solid #eaeaea;
   padding-top:30rpx;
   color:#404040;
}
.calender .week{
   display: flex;
   flex-direction: row;
   justify-content: space-around;
}
.calender .week text{
   width:13%;
   text-align: center;
   font-size:26rpx;
}
.calender .date{
   width:13%;
   display: inline-block;
}